{
  "routes": [
    {
      "method": "GET",
      "path": "/trainings",
      "handler": "training.find",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/trainings/count",
      "handler": "training.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/trainings/:id",
      "handler": "training.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/trainings",
      "handler": "training.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/trainings/:id",
      "handler": "training.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/trainings/:id",
      "handler": "training.delete",
      "config": {
        "policies": []
      }
    },  
    {
      "method": "GET",
      "path": "/trainings/index/my",
      "handler": "training.indexByUser",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "PUT",
      "path": "/trainings/:id/subscribe",
      "handler": "training.subscribe",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "PUT",
      "path": "/trainings/:id/unsubscribe",
      "handler": "training.unsubscribe",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    }
  ]
}
