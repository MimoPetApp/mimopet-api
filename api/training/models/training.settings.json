{
  "kind": "collectionType",
  "collectionName": "trainings",
  "info": {
    "name": "Training",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "published": {
      "type": "date",
      "required": true
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "min_duration": {
      "type": "integer",
      "default": 5
    },
    "max_duration": {
      "type": "integer",
      "default": 10
    },
    "steps": {
      "type": "dynamiczone",
      "components": [
        "steps.quizz",
        "steps.slides",
        "steps.exercise-step",
        "steps.feedback-step",
        "steps.video-step"
      ],
      "required": false
    },
    "modules": {
      "via": "trainings",
      "collection": "module"
    }
  }
}
