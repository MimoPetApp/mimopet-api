{
  "routes": [
    {
      "method": "GET",
      "path": "/videos",
      "handler": "video.find",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/videos/count",
      "handler": "video.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/videos/:id",
      "handler": "video.findOne",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "POST",
      "path": "/videos",
      "handler": "video.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/videos/:id",
      "handler": "video.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/videos/:id",
      "handler": "video.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/videos/:id/complete",
      "handler": "video.completeStep",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    }
  ]
}
