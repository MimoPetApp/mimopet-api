{
  "routes": [
    {
      "method": "GET",
      "path": "/slides",
      "handler": "slide.find",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/slides/count",
      "handler": "slide.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/slides/:id",
      "handler": "slide.findOne",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "POST",
      "path": "/slides",
      "handler": "slide.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/slides/:id",
      "handler": "slide.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/slides/:id",
      "handler": "slide.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/slides/:id/complete",
      "handler": "slide.completeStep",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    }
  ]
}
