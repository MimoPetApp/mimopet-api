{
  "routes": [
    {
      "method": "GET",
      "path": "/exercises",
      "handler": "exercise.find",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/exercises/count",
      "handler": "exercise.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/exercises/:id",
      "handler": "exercise.findOne",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "POST",
      "path": "/exercises",
      "handler": "exercise.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/exercises/:id",
      "handler": "exercise.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/exercises/:id",
      "handler": "exercise.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/exercises/:id/complete",
      "handler": "exercise.completeStep",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    }
  ]
}
