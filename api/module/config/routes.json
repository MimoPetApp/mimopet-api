{
  "routes": [
    {
      "method": "GET",
      "path": "/modules",
      "handler": "module.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/modules/count",
      "handler": "module.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/modules/:id",
      "handler": "module.findOne",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/trainings/:id/modules",
      "handler": "module.indexByTraining",
      "config": {
        "policies": ["global::is-pet-owner"]
      }
    },
    {
      "method": "POST",
      "path": "/modules",
      "handler": "module.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/modules/:id",
      "handler": "module.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/modules/:id",
      "handler": "module.delete",
      "config": {
        "policies": []
      }
    }
  ]
}
